@echo off
REM Path to Condaplus activation script
set CONDAPLUS_SCRIPT="C:\Path\To\Condaplus\condaplus.bat"

REM Path to the network share
set NETWORK_PATH="\\networkserver\sharedfolder"

REM Python script name
set PYTHON_SCRIPT="myscript.py"

REM Run the Condaplus activation script
call %CONDAPLUS_SCRIPT%

REM Activate the Conda environment
call conda activate local_test_env

REM Map the network path to a drive letter and change to that directory
pushd %NETWORK_PATH%

REM Run the Python script inside the Conda environment
python %PYTHON_SCRIPT%

REM Return to the original directory and unmap the drive
popd

REM Deactivate the Conda environment
call conda deactivate

REM Pause to keep the command window open
pause